<%- include('layout') %>

<title><%= title %></title>
<%- include('navbar') %>

<div class="container" style="width: 70%;">
    <div class="row">
        <div class="col-md-8">
            <div class="mt-3 recent-likes">My Recent Likes</div>
            <% if (likes.length === 0) { %>
                <div class="mt-3 no-likes">
                    You have no likes.
                </div>
            <% } else { %>
                <% likes.forEach(like => { %>
            <div class="row d-flex align-items-center">
                <div class="col-2 mt-3 like-date">
                    <%= formatDate(like.likeCreatedAt) %>
                </div>
                <div class="col-10 mt-3">
                    <span >
                        <a class="text-decoration-none" style="font-family: Helvetica, sans-serif; font-weight: 400; font-size: 12px; line-height: 18px; color: #00635d;" href="/user/<%= userId %>/mybooks"><%= firstName %></a>
                    </span>
                    <span style="font-family: Helvetica, sans-serif; font-weight: 400; font-size: 12px; line-height: 18px; color: #181818;" >liked:</span>
                    <span>
                        <a class="text-decoration-none" style="font-family: Helvetica, sans-serif; font-weight: 400; font-size: 12px; line-height: 18px; color: #00635d;" href="/user/<%= like.reviewAuthorId %>/mybooks"><%= like.reviewAuthorName %>'s review of</a>
                    </span>
                    <span>
                        <a class="text-decoration-none" style="font-family: Helvetica, sans-serif; font-weight: 400; font-size: 12px; line-height: 18px; color: #00635d;" href="/book/<%= like.bookId %>/details"><%= like.bookTitle %></a>
                    </span>
                </div>
            </div>
            <hr>
            <% }); %>
                <% } %>
                
        </div>
    </div>
</div>

            