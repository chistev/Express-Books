<%- include('layout') %>

<title><%= title %></title>
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand mx-auto fs-1" href="/myreads">my<span class="fw-bold">reads</span></a>
        </div>
    </nav>
    <p class="create-account text-center fs-1 fw-bold">Sign in as admin</p>
    <div id="register-error-message" class="mx-auto p-2 fw-bold" style="display: <% if(errors && errors.length > 0) { %>block<% } else { %>none<% } %>;">
        <% if(errors && errors.length > 0) { %>
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        <% } %>
    </div>
    <div class="container" style="width: 350px;">
        <form class="text-center d-flex flex-column mb-4" action="/admin" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3 d-flex flex-column">
                <label for="email" class="form-label register-form-label me-auto">Email</label>
                <input type="email" class="form-control register-border-custom" id="email" name="email" style="border-radius: 50px;">
            </div>
            <div class="mb-3 d-flex flex-column">
                <div class="d-flex">
                    <label for="password" class="form-label me-auto">Password</label>
                    <a href="/forgot_password" style="color:#000000">Forgot your password?</a>
                </div>
                <input type="password" class="form-control register-border-custom" id="password" name="password" style="border-radius: 50px;">
            </div>
            <button type="submit" class="register-custom-button mb-3">Sign in</button>
            <div class="me-auto">
                <input type="checkbox" name="keepSignedIn">
                <label for="" style="color:#000000">Keep me signed in.</label>
            </div>
        </form>
    </div>